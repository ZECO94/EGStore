<!DOCTYPE html>
<html>
  <head>
    <title>EGStore</title>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="format-detection" content="telephone=no">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="author" content="">
    <meta name="keywords" content="">
    <meta name="description" content="">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" type="text/css" href="style.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@9/swiper-bundle.min.css" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Outfit:wght@100..900&display=swap" rel="stylesheet">
  </head>

  <body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">EGStore</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" asp-area="Customer" asp-action="Index" asp-controller="Home">Home</a>
                        
                    </li>
                    @if (User.IsInRole("User"))
                    {
                        <li class="nav-item">
                            <a class="nav-link me-4" asp-area="Customer" asp-action="Index" asp-controller="Cart"><i class="bi bi-cart3"></i></a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link me-4" asp-area="Customer" asp-action="Index" asp-controller="Order"><i class="bi bi-list-ul"></i> Orders</a>
                        </li>
                    }
                    @if (User.IsInRole("Admin") || User.IsInRole("Manager"))
                    {
                        <li class="nav-item dropdown">
                            <a class="nav-link me-4 dropdown-toggle" data-bs-toggle="dropdown" href="#" role="button" aria-expanded="false">Management</a>
                            <ul class="dropdown-menu animate slide border">
                                <a class="nav-link me-4" asp-area="Admin" asp-action="Index" asp-controller=""></a>
                                <a class="nav-link me-4" asp-area="Admin" asp-action="Index" asp-controller="Category">Categories</a>
                                <a class="nav-link me-4" asp-area="Admin" asp-action="Index" asp-controller="Brand">Brands</a>
                                <a class="nav-link me-4" asp-area="Admin" asp-action="Index" asp-controller="Product">Products</a>
                                <a class="nav-link me-4" asp-area="Admin" asp-action="Index" asp-controller="Order">Orders</a>
                                @if (User.IsInRole("Admin"))
                                {
                                    <a class="nav-link me-4" asp-area="Identity" asp-page="/Account/Register">Add User</a>
                                }
                            </ul>

                        </li>
                    }
                </ul>
                    
                </ul>
                <div class="user-items d-flex">
                    <partial name="_LoginPartial" />
                </div>
                @* <form asp-action="Search" asp-controller="Home" class="d-flex">
                    <input class="form-control me-sm-2" name="query" type="search" placeholder="Search">
                    <button class="btn btn-secondary my-2 my-sm-0" type="submit">Search</button>
                </form> *@
            </div>
        </div>
    </nav>
    <div class="container">
    <main role="main">
    @RenderBody()
    </main>
    </div>
    
    <script src="js/jquery-1.11.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/swiper/swiper-bundle.min.js"></script>
    <script type="text/javascript" src="js/script.js"></script>
  </body>
</html>



@await RenderSectionAsync("Scripts", required: false)