@model IEnumerable<EGStore.Models.Product>

@{
    ViewData["Title"] = "Products";
}

<div class="container mt-5">
    <h2 class="text-center mb-4">Our Products</h2>

    <div class="row">
        @foreach (var product in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card h-100 shadow-sm">
                    <!-- Product Image -->
                    <img src="~/Imgs/@product.Image" class="card-img-top" alt="@product.ProductName" style="width:200px">

                    <div class="card-body d-flex flex-column">
                        <!-- Product Title -->
                        <h5 class="card-title">@product.ProductName</h5>

                        @* <!-- Product Description -->
                        <p class="card-text text-truncate">@product.ProductDescription</p> *@

                        <!-- Rating -->
                        <div class="mb-2">
                            <span class="badge bg-success">Rating: @product.Rate</span>
                        </div>

                        <!-- Price -->
                        <div class="mb-2">
                            <h5 class="text-primary">$@product.Price</h5>
                        </div>

                        <!-- Stock Quantity -->
                        @if (product.StockQuantity > 0)
                        {
                            <span class="badge bg-info">In Stock: @product.StockQuantity</span>
                        }
                        else
                        {
                            <span class="badge bg-danger">Out of Stock</span>
                        }

                        <!-- Product Details Button -->
                        <div class="mt-auto">
                            <a asp-area="Customer" asp-action="Details" asp-controller="Home" asp-route-id="@product.Id" class="btn btn-primary btn-block mt-3">View Details</a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<style>
    .image-container {
        width: 100%;
        height: 250px; /* Set a fixed height for all images */
        overflow: hidden; /* Hide any overflow */
    }

        .image-container img {
            width: 100%;
            height: 100%;
            object-fit: cover; /* Ensures the image covers the entire container without distortion */
        }

    .card-text.text-truncate {
        max-height: 60px; /* Adjust to fit your needs */
        overflow: hidden;
        text-overflow: ellipsis;
    }
</style>
