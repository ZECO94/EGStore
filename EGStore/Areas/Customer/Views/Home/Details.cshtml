@model EGStore.Models.Product

@{
    ViewData["Title"] = "Product Details";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-md-6">
            <!-- Display product image -->
            <img src="~/Imgs/@Model.Image" class="img-fluid" alt="@Model.ProductName" />
        </div>
        <div class="col-md-6">
            <h1>@Model.ProductName</h1>
            
            <p class="lead">@Model.ProductDescription</p>

            <h4 class="mt-4">Price: @Model.Price.ToString("C")</h4>

            <div class="mb-3">
                <span class="badge bg-warning text-dark">Rating: @Model.Rate/5</span>
            </div>

            <div class="mb-3">
                <strong>Stock Quantity:</strong>
                <span class="text-success">@Model.StockQuantity</span>
            </div>
          <!-- Buttons to perform actions -->
            <div class="mt-3">
                <a asp-action="Index" asp-controller="Cart" asp-route-id="@Model.Id" class="btn btn-primary">
                    <i class="bi bi-cart-plus"></i> Add to Cart
                </a>
                <a asp-action="Display" class="btn btn-secondary">
                    <i class="bi bi-box-arrow-left"></i> Back to Products
                </a>
            </div>
        </div>
    </div>

    <!-- Reviews Section -->
    @if (Model.Reviews != null && Model.Reviews.Any())
    {
        <div class="mt-5">
            <h4>Reviews</h4>
            <ul class="list-group">
                @foreach (var review in Model.Reviews)
                {
                    <li class="list-group-item">
                        <strong>@review.ApplicationUser.FullName:</strong> @review.Comment
                        <br />
                        @* <small>Rating: @review.Rate/5</small> *@
                    </li>
                }
            </ul>
        </div>
    }
</div>
