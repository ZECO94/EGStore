@{
    Layout = "_PagesLayout";  // Ensure to use your existing layout
    ViewData["Title"] = "Contact Us";
}

<section class="contact-section">
    <div class="container">
        <h2 class="section-title text-center">Get In Touch</h2>
        <p class="text-center">We’d love to hear from you. Send us a message or visit us at our location.</p>

        <div class="row mt-5">
            <!-- Contact Form -->
            <div class="col-md-6">
                <form class="contact-form">
                    <div class="mb-3">
                        <label for="name" class="form-label">Name</label>
                        <input type="text" class="form-control" id="name" placeholder="Your Name" required>
                    </div>
                    <div class="mb-3">
                        <label for="email" class="form-label">Email</label>
                        <input type="email" class="form-control" id="email" placeholder="Your Email" required>
                    </div>
                    <div class="mb-3">
                        <label for="subject" class="form-label">Subject</label>
                        <input type="text" class="form-control" id="subject" placeholder="Subject" required>
                    </div>
                    <div class="mb-3">
                        <label for="message" class="form-label">Message</label>
                        <textarea class="form-control" id="message" rows="4" placeholder="Your Message" required></textarea>
                    </div>
                    <button type="submit" class="btn btn-primary btn-block">Send Message</button>
                </form>
            </div>

            <!-- Contact Information -->
            <div class="col-md-6">
                <div class="contact-info">
                    <h4>Contact Information</h4>
                    <ul class="list-unstyled">
                        <li><i class="bi bi-geo-alt-fill"></i> 123 Main Street, City, Country</li>
                        <li><i class="bi bi-telephone-fill"></i> +123 456 7890</li>
                        <li><i class="bi bi-envelope-fill"></i> contact@yourstore.com</li>
                        <li><i class="bi bi-clock-fill"></i> Mon - Fri: 9:00 AM - 6:00 PM</li>
                    </ul>
                    <h4>Follow Us</h4>
                    <div class="social-links">
                        <a href="#"><i class="bi bi-facebook"></i></a>
                        <a href="#"><i class="bi bi-twitter"></i></a>
                        <a href="#"><i class="bi bi-instagram"></i></a>
                        <a href="#"><i class="bi bi-linkedin"></i></a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Map Section (You can embed an actual map here using Google Maps) -->
        <div class="map mt-5">
            <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3153.4321871743897!2d144.95605421532153!3d-37.81720997975132!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x6ad65d43b113a0b9%3A0x5045675218ce7e33!2sFederation%20Square!5e0!3m2!1sen!2sus!4v1602178406391!5m2!1sen!2sus" width="100%" height="400" frameborder="0" style="border:0;" allowfullscreen="" aria-hidden="false" tabindex="0"></iframe>
        </div>
    </div>
</section>

<!-- Styles (can be added to your CSS file) -->
<style>
    .contact-section {
        padding: 50px 0;
    }

    .section-title {
        font-size: 2.5rem;
        font-weight: bold;
        margin-bottom: 20px;
    }

    .contact-form .form-label {
        font-weight: bold;
    }

    .btn-primary {
        background-color: #007bff;
        border-color: #007bff;
        font-size: 1.1rem;
        padding: 10px;
    }

    .contact-info {
        background-color: #f9f9f9;
        padding: 30px;
        border-radius: 10px;
    }

        .contact-info h4 {
            font-size: 1.5rem;
            margin-bottom: 15px;
        }

        .contact-info ul {
            padding-left: 0;
            list-style: none;
            font-size: 1.1rem;
        }

        .contact-info li {
            margin-bottom: 10px;
        }

        .contact-info i {
            color: #007bff;
            margin-right: 10px;
        }

    .social-links a {
        font-size: 1.5rem;
        color: #007bff;
        margin-right: 15px;
        text-decoration: none;
    }

        .social-links a:hover {
            color: #0056b3;
        }

    .map iframe {
        border-radius: 10px;
    }
</style>

