@model IEnumerable<EGStore.Models.Cart>

@{
    ViewData["Title"] = "Your Shopping Cart";
    var total = ViewBag.Total;
}

<div class="container mt-5">
    <h2 class="mb-4">Your Cart</h2>

    @if (!Model.Any())
    {
        <div class="alert alert-info" role="alert">
            Your cart is empty. <a href="@Url.Action("Index", "Home")" class="alert-link">Continue shopping</a>.
        </div>
    }
    else
    {
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Product</th>
                    <th>Price</th>
                    <th>Quantity</th>
                    <th>Total</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            <img src="@item.Product.Image" alt="@item.Product.ProductName" class="img-thumbnail" style="width: 100px;" />
                            @item.Product.ProductName
                        </td>
                        <td>@item.Product.Price.ToString("C")</td>
                        <td>
                            <form asp-action="UpdateQuantity" asp-route-id="@item.Id" method="post" class="form-inline">
                                <input type="number" name="quantity" value="@item.Count" class="form-control form-control-sm mr-2" style="width: 60px;" />
                                <button type="submit" class="btn btn-primary btn-sm">Update</button>
                            </form>
                        </td>
                        <td>@(item.Count * item.Product.Price).ToString("C")</td>
                        <td>
                            <a asp-action="RemoveFromCart" asp-route-id="@item.Id" class="btn btn-danger btn-sm">
                                <i class="fa fa-trash"></i> Remove
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        <div class="d-flex justify-content-between">
            <h4>Total: @total.ToString("C")</h4>
            <a asp-action="Checkout" class="btn btn-success">Proceed to Checkout</a>
        </div>
    }
</div>

