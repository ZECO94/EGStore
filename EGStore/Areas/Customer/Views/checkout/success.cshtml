@{
    Layout = "_Pages1Layout";
    ViewData["Title"] = "Payment Successful";
}

<style>
    .background-container {
        background-image: url('@Url.Content("~/logo/Success.png")'); 
        background-size: cover;
        background-position: center;
        min-height: 100vh;
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .success-content {
        background-color: rgba(255, 255, 255, 0.8);
        padding: 30px;
        border-radius: 10px;
        text-align: center;
    }

    h2 {
        color: #28a745;
    }

    p {
        font-size: 18px;
        color: #333;
    }
</style>


<div class="background-container">
    <div class="success-content">
        <h2>Payment Successful</h2>
        <p>Thank you for your purchase! Your payment has been successfully processed.</p>

        <a href="/" class="btn btn-primary mt-3">Continue Shopping</a>
        <a asp-area="Customer" asp-action="Index" asp-controller="Order" class="btn btn-secondary mt-3">View Your Order</a>
        <a asp-area="Customer" asp-action="AddReview" asp-controller="Cart" class="btn btn-secondary mt-3">What about <i class="bi bi-chat-left-heart-fill"></i></a>
    </div>
</div>
