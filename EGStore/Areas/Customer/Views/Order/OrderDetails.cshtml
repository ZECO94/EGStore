@model IEnumerable<OrderDetails>

@{
    Layout = "_PagesLayout";
    ViewData["Title"] = "Order Details";
}

@if (Model != null && Model.Any())
{
    <div class="container mt-5">
        <h2 class="mb-4">Order Details</h2>

        <p><strong>Order Date:</strong> @Model?.FirstOrDefault().Order.OrderDate.ToString("dd/MM/yyyy")</p>
        <p><strong>Shipping Date:</strong> @Model?.First().Order.ShippingDate.ToString("dd/MM/yyyy")</p>
        <p><strong>Total Price:</strong> @Model?.First().Order.TotalPrice $</p>
        <p><strong>Status:</strong> @Model?.First().Order.OrderStatus</p>
        <p><strong>Name:</strong> @Model?.First().Order.Name</p>
        <p><strong>Address:</strong> @Model?.First().Order.Address</p>
        <p><strong>Phone:</strong> @Model?.First().Order.PhoneNumber</p>

        <h3>Order Items</h3>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Product</th>
                    <th>Quantity</th>
                    <th>Unit Price</th>
                    <th>Total</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Product.ProductName</td>
                        <td>@item.ProductsQuantity</td>
                        <td>@item.UnitPrice $</td>
                        <td>@(item.ProductsQuantity * item.UnitPrice) $</td>
                    </tr>
                }
            </tbody>
        </table>

        <a href="@Url.Action("Index", "Home")" class="btn btn-primary">Continue Shopping</a>
    </div>
}
else
{
    <div class="alert alert-warning">No order details available.</div>
}
