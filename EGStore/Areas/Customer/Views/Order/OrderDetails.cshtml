@model IEnumerable<OrderDetails>

@{
    Layout = "_PagesLayout";
    ViewData["Title"] = "Order Details";
}

<div class="container mt-5">
    <div class="row">
        <!-- Order Summary Card -->
        <div class="col-lg-6 mb-4">
            <div class="card shadow-sm border-0">
                <div class="card-body">
                    <h4 class="card-title mb-3">Order Summary</h4>
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item">
                            <strong>Order Date:</strong> @Model.First().Order.OrderDate.ToString("dd/MM/yyyy")
                        </li>
                        <li class="list-group-item">
                            <strong>Shipping Date:</strong> @Model.First().Order.ShippingDate.ToString("dd/MM/yyyy")
                        </li>
                        <li class="list-group-item">
                            <strong>Total Price:</strong> @Model.First().Order.TotalPrice $
                        </li>
                        <li class="list-group-item">
                            <strong>Status:</strong>
                            <span class="badge bg-info text-dark">@Model.First().Order.OrderStatus</span>
                        </li>
                        <li class="list-group-item">
                            <strong>Customer:</strong> @Model.First().Order.Name
                        </li>
                        <li class="list-group-item">
                            <strong>City:</strong> @Model.First().Order.City
                        </li>
                        <li class="list-group-item">
                            <strong>Shipping Address:</strong> @Model.First().Order.Address
                        </li>
                        <li class="list-group-item">
                            <strong>Phone:</strong> @Model.First().Order.PhoneNumber
                        </li>
                        <li class="list-group-item">
                            <strong>Delivery Agent:</strong> @Model.First().Order.DeliveringAgent
                        </li>
                        <li class="list-group-item">
                            <strong>Agent Contact:</strong> @Model.First().Order.AgentContact
                        </li>
                    </ul>
                </div>
            </div>
        </div>

        <!-- Order Items Card -->
        <div class="col-lg-6 mb-4">
            <div class="card shadow-sm border-0">
                <div class="card-body">
                    <h4 class="card-title mb-3">Order Items</h4>
                    <table class="table align-middle mb-0 table-bordered table-hover">
                        <thead class="table-dark">
                            <tr>
                                <th scope="col">Product</th>
                                <th scope="col">Quantity</th>
                                <th scope="col">Unit Price</th>
                                <th scope="col">Total</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.Product.ProductName</td>
                                    <td>@item.ProductsQuantity</td>
                                    <td>@item.UnitPrice $</td>
                                    <td>@(item.ProductsQuantity * item.UnitPrice) $</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <!-- Actions -->
    <div class="d-flex justify-content-between mt-4">
        <a href="@Url.Action("Index", "Home")" class="btn btn-primary btn-lg">
            <i class="bi bi-arrow-left-circle"></i> Continue Shopping
        </a>
        @* <a asp-area="Customer" asp-action="Pay" asp-controller="Cart" class="btn btn-outline-secondary btn-lg">
            <i class="bi bi-bank"></i> Pay
        </a> *@
    </div>
</div>
